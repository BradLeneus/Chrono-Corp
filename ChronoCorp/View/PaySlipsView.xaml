<UserControl x:Class="ChronoCorp.View.PaySlipsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ChronoCorp.View"
             mc:Ignorable="d" 
             HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
    <Border Style="{StaticResource ViewBorderStyle}">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0.5*" />
                <ColumnDefinition Width="0.5*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="0.1*"/>
                <RowDefinition Height="0.9*"/>
            </Grid.RowDefinitions>

            <TextBlock Style="{StaticResource CurrentViewTitleStyle}">Mes fiches de paies</TextBlock>
            <StackPanel Grid.Row="1">
                <DataGrid AutoGenerateColumns="False"
                ColumnHeaderStyle="{StaticResource DataGridHeaderStyle}"
                CellStyle="{StaticResource DataGridCellStyle}"
                BorderBrush="{StaticResource LightBlueColor}"
                RowStyle="{StaticResource DataGridRowStyle}"
                GridLinesVisibility="None"
                IsReadOnly="True">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Employé" Width="*"/>
                        <DataGridTextColumn Header="Date début" Width="*"/>
                        <DataGridTextColumn Header="Date fin" Width="*"/>
                        <DataGridTextColumn Header="Type de congé" Width="*"/>
                        <DataGridTextColumn Header="Date de la demande" Width="*"/>
                    </DataGrid.Columns>
                </DataGrid>
            </StackPanel>
            <StackPanel Grid.Row="1" Grid.Column="1" Margin="20 0 0 0">
                <Border Style="{StaticResource BackgroundFormStyle}">
                    <StackPanel>
                        <TextBlock Style="{StaticResource CurrentViewTitleStyle}" HorizontalAlignment="Center" Padding="0 0 0 10">Fiche de paie du {date}</TextBlock>
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <TextBlock Grid.Row="0" Grid.Column="0" Style="{StaticResource GridCellStyle}" Text="Début de la période" />
                            <TextBlock Grid.Row="0" Grid.Column="1" Style="{StaticResource GridCellStyle}" Text="" />
                            <TextBlock Grid.Row="1" Grid.Column="0" Style="{StaticResource GridCellStyle}" Text="Fin de la période" />
                            <TextBlock Grid.Row="1" Grid.Column="1" Style="{StaticResource GridCellStyle}" Text="" />
                            <TextBlock Grid.Row="2" Grid.Column="0" Style="{StaticResource GridCellStyle}" Text="Nombre d'heures" />
                            <TextBlock Grid.Row="2" Grid.Column="1" Style="{StaticResource GridCellStyle}" Text="" />
                            <TextBlock Grid.Row="3" Grid.Column="0" Style="{StaticResource GridCellStyle}" Text="Montant" />
                            <TextBlock Grid.Row="3" Grid.Column="1" Style="{StaticResource GridCellStyle}" Text="" />
                            <TextBlock Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="2" Style="{StaticResource GridCell2Style}"
                                        Text="Vacances"
                                        FontWeight="Bold" HorizontalAlignment="Center" />
                            <TextBlock Grid.Row="5" Grid.Column="0" Style="{StaticResource GridCellStyle}" Text="Vacances cumulées" />
                            <TextBlock Grid.Row="5" Grid.Column="1" Style="{StaticResource GridCellStyle}" Text="" />
                            <TextBlock Grid.Row="6" Grid.Column="0" Style="{StaticResource GridCellStyle}" Text="Vacances cumulées total" />
                            <TextBlock Grid.Row="6" Grid.Column="1" Style="{StaticResource GridCellStyle}" Text="" />
                            <TextBlock Grid.Row="7" Grid.Column="0" Grid.ColumnSpan="2" Style="{StaticResource GridCell2Style}"
                                        Text="Depuis l'embauche..."
                                        FontWeight="Bold" HorizontalAlignment="Center" />
                            <TextBlock Grid.Row="8" Grid.Column="0" Style="{StaticResource GridCellStyle}" Text="Nombre d'heures total" />
                            <TextBlock Grid.Row="8" Grid.Column="1" Style="{StaticResource GridCellStyle}" Text="" />
                            <TextBlock Grid.Row="9" Grid.Column="0" Style="{StaticResource GridCellStyle}" Text="Montant total" />
                            <TextBlock Grid.Row="9" Grid.Column="1" Style="{StaticResource GridCellStyle}" Text="" />
                        </Grid>
                    </StackPanel>
                </Border>
            </StackPanel>
        </Grid>
    </Border>
</UserControl>
