<UserControl x:Class="ChronoCorp.View.NewLeaveView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ChronoCorp.View"
             mc:Ignorable="d" 
             HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
    <Border Style="{StaticResource BackgroundFormStyle}">
        <StackPanel>
            <TextBlock Style="{StaticResource CurrentViewTitleStyle}" HorizontalAlignment="Center">Nouvelle demande</TextBlock>
            <StackPanel Style="{StaticResource StackPanelFormStyle}">
                <Label Style="{StaticResource LabelStyle}">Type de la demande</Label>
                <TextBox Style="{StaticResource FormInputStyle}"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <StackPanel Style="{StaticResource StackPanelFormStyle}" Width="auto">
                    <Label Style="{StaticResource LabelStyle}">Du</Label>
                    <DatePicker x:Name="dateDebut" Width="auto"/>
                </StackPanel>
                <StackPanel Style="{StaticResource StackPanelFormStyle}" Width="auto">
                    <Label Style="{StaticResource LabelStyle}">Au</Label>
                    <DatePicker x:Name="dateFin" Width="auto"/>
                </StackPanel>
            </StackPanel>
            <StackPanel Style="{StaticResource StackPanelFormStyle}">
                <Label Style="{StaticResource LabelStyle}">Commentaire</Label>
                <TextBox Style="{StaticResource FormInputStyle}"
                    AcceptsReturn="True"
                    Width="auto"
                    Height="100"/>
            </StackPanel>
            <Button Style="{StaticResource DarkBlueButtonStyle}" Command="{Binding SendLeaveRequestCommand}">Envoyer</Button>
        </StackPanel>
    </Border>
    
</UserControl>
