<UserControl x:Class="ChronoCorp.View.ProfileView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ChronoCorp.View"
             mc:Ignorable="d" 
             HorizontalAlignment="Stretch" VerticalAlignment="Stretch">

    <Border Style="{StaticResource ViewBorderStyle}">
        <StackPanel>
            <TextBlock Text="Profil Utilisateur" Style="{StaticResource CurrentViewTitleStyle}"/>
            <TextBlock Text="{Binding Username}"/>
            <TextBlock Text="{Binding Role}" />
        </StackPanel>
    </Border>
</UserControl>
