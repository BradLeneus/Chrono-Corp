<Window x:Class="ChronoCorp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ChronoCorp"
        mc:Ignorable="d"
        Title="ChronoCorp" Width="1920" Height="1080"
        >
    <!-- WindowState="Maximized" -->
    <Grid Background="#0D3151">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.2*"/>
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="150"/>
            <RowDefinition />
        </Grid.RowDefinitions>
        <StackPanel>
            <Image Source="/Images/logo_chronocorp.png" Margin="5 10 0 0"/>
        </StackPanel>
        <ListBox ItemsSource="{Binding MenuItems}"
                 Grid.Column="0" Grid.Row="1"
                 Background="Transparent"
                 BorderThickness="0"
                 Padding="0 20 0 0"
                 Width="auto"
                 ItemContainerStyle="{StaticResource NavListBoxStyle}">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Button Command="{Binding Command}" Style="{StaticResource NavButtonStyle}">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="{Binding Title}" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        <ContentControl Grid.Row="1" Grid.Column="1" Content="{Binding CurrentView}" />
    </Grid>

</Window>
